<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="200.0" prefWidth="200.0"
	xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="app.MainController">
	<center>
		<VBox alignment="CENTER" spacing="12">

			<children>
				<Label fx:id="messageLabel" alignment="CENTER" text="" />
				<!-- GS1-128 inputs (hidden unless GS1-128 selected) -->
				<HBox alignment="CENTER" spacing="8">
					<children>
						<VBox prefHeight="200.0" prefWidth="200.0">
							<children>
								<Label text="Product code 6 digits" />
								<TextField fx:id="productCodeField"  />
							</children>
						</VBox>
						<VBox prefHeight="200.0" prefWidth="200.0">
							<children>
								<Label text="Weight (lbs) XX.xx " />
								<TextField fx:id="gs1WeightField"  />
							</children>
						</VBox>
					</children>
				</HBox>

				<HBox alignment="CENTER" spacing="8">
					<children>
						<Button onAction="#onGenerateClicked" text="Generate" />
						<Button onAction="#onPrintClicked" text="Print Barcode" />
					</children>
				</HBox>

				<ImageView fx:id="barcodeView" fitHeight="120"
					fitWidth="480" preserveRatio="true" />
				<Label fx:id="contentLabel" text="" BorderPane.alignment="CENTER" />
			</children>
		</VBox>
	</center>
</BorderPane>
