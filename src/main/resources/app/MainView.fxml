<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
	prefWidth="600.0" xmlns="http://javafx.com/javafx/22"
	xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.MainController">
	<top>
		<MenuBar>
			<menus>
				<Menu mnemonicParsing="false" text="File">
					<items>
						<MenuItem mnemonicParsing="false" onAction="#openReport"
							text="Open Inventory Report" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
	<center>
		<TabPane prefHeight="200.0" prefWidth="200.0" side="BOTTOM" fx:id="tabpane"
			tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
			<tabs>
				<Tab text="Manual">
					<content>
						<VBox alignment="CENTER" spacing="12">

							<children>
								<Label fx:id="messageLabel" alignment="CENTER" text="" />
								<!-- GS1-128 inputs (hidden unless GS1-128 selected) -->
								<HBox alignment="CENTER" spacing="8">
									<children>
										<VBox prefHeight="200.0" prefWidth="200.0">
											<children>
												<Label text="Product code 6 digits" />
												<TextField fx:id="productCodeField" />
											</children>
										</VBox>
										<VBox prefHeight="200.0" prefWidth="200.0">
											<children>
												<Label text="Weight (lbs) WW.www " />
												<TextField fx:id="gs1WeightField" />
											</children>
										</VBox>
									</children>
								</HBox>

								<HBox alignment="CENTER" spacing="8">
									<children>
										<Button onAction="#onGenerateClicked" text="Generate" />
										<Button onAction="#onPrintWindowsClicked"
											text="Print Windows Printer" />
										<Button onAction="#onPrintZebraClicked"
											text="Print Zebra Printer" />
									</children>
								</HBox>

								<ImageView fx:id="barcodeView" fitHeight="120"
									fitWidth="480" preserveRatio="true" />
								<Label fx:id="contentLabel" text=""
									BorderPane.alignment="CENTER" />
							</children>
						</VBox>

					</content>
				</Tab>
				<Tab text="Batch">
					<content>
						<AnchorPane minHeight="0.0" minWidth="0.0"
							prefHeight="180.0" prefWidth="200.0">
							<children>
								<TableView fx:id="tableView" layoutX="-2.0"
									layoutY="-2.0" prefHeight="345.0" prefWidth="607.0"
									AnchorPane.bottomAnchor="2.0" AnchorPane.leftAnchor="2.0"
									AnchorPane.rightAnchor="2.0" AnchorPane.topAnchor="2.0">


								</TableView>
							</children>
						</AnchorPane>
					</content>
				</Tab>
			</tabs>
		</TabPane>
	</center>
</BorderPane>
